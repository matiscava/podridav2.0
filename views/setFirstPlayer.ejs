<%- include('./components/head.ejs') %> 
<main>
  <div class="container containerHand">
    <h2><%= title %></h2>
    <form action="/game/setFirstPlayer" method="post">
      <div class="label-container">
        <label for="firstPlayer">Seleccione el primer jugador que ser√° mano:</label>
        <br />
        <select name="playerId" id="firstPlayer">
          <% playerList.forEach( p => { %>
            <option value="<%= p.id %>"><%= p.name %></option>
          <% }); %>
        </select>
      </div>
      <p id="selected-player" style="margin-top: 10px; font-weight: bold;"></p>
      <input type="hidden" name="gameId" value="<%= gameId %>">
